<!-- game_player.erb -->

<h3>Welcome <%= "#{session[:player_name]}" %></h3>
<ul class="inline">
  <li><a href="/reset">Not <%= "#{session[:player_name]}?" %></a></p>
  <li><a href="/new_game">New Game</a></p>
</ul>
<div>
  <h4>Your cards:</h4>
  <ul class="inline">
    <% session[:player_cards].each do |card| %>
      <li class="btn"><%= "#{card[0]} of #{card[1]}" %></li>
    <% end %>
  </ul>
</div>
Total: <%= "#{session[:player_value][:display]}" %>
<p><%= session[:player_msg] %></p>

<a href="/game/player/hit" class="btn">Hit</a>
<a href="/game/player/stay" class="btn">Stay</a>

<br>
<hr>

<div>
  <h4>Dealer's Cards:</h4>
  <ul class="inline">
    <% session[:dealer_cards].each do |card| %>
      <li class="btn"><%= "#{card[0]} of #{card[1]}" %></li>
    <% end %>
  </ul>
</div>
<!-- hod the place for this even if we don't show the total -->
<!-- otherwise the message text creeps up -->
<!-- also, we may still want to display what dealer is showing, if not full total. -->
Total: <%= "#{session[:dealer_value][:display]}" %>
<p><%= session[:dealer_msg] %></p>
